</header>

<!-- Menu -->
  <section id="menu">

    <!-- Search -->
      <section>
        <form class="search" method="get" action="#">
          <input type="text" name="query" placeholder="Search" />
        </form>
      </section>

    <!-- Links -->
      <section>
        <ul class="links">
          <li>
            <% unless current_page?(root_path) %>
              <h3><%= link_to 'NewsFeed', root_path%></h3>
              <p>Enjoy new stroies with your friends</p>
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li>
              <h3><%= link_to "Profile", edit_user_registration_path%></h3>
              <p>You can manage your profile</p>
            </li>
            <li>
              <h3><%= link_to 'Log out', destroy_user_session_path, method: :delete, data: {confirm:"Are you sure?"}%></h3>
              <p>Good bye</p>
            </li>
          <% else %>
            <li>
              <h3><%= link_to "Log in", new_user_session_path unless current_page?(new_user_session_path) %></h3>
              <p>Welcome</p>
            </li>
            <li>
              <h3><%= link_to "Sign up", new_user_registration_path unless current_page?(new_user_registration_path) %></h3>
            </li>
          <% end %>
        </ul>
      </section>

  <!-- Actions -->
    <section>
      <ul class="actions vertical">
        <li><a href="posts/new" class="button big fit">New Post</a></li>
      </ul>
    </section>

</section>
