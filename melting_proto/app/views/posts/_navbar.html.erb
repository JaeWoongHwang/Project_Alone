<!-- Header -->
  <header id="header">
    <h1><a href="#">Melting</a></h1>
    <nav class="links">
      <ul>
        <% unless current_page?(root_path) %>
          <li><%= link_to 'Home', root_path%></li>
        <% end %>
        <% if user_signed_in? %>
          <li><%= link_to "Profile", edit_user_registration_path%></li>
          <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, data: {confirm:"Are you sure?"}%></li>
        <% else %>
          <li><%= link_to "Log in", new_user_session_path unless current_page?(new_user_session_path) %></li>
          <li><%= link_to "Sign up", new_user_registration_path unless current_page?(new_user_registration_path) %></li>
        <% end %>
      </ul>
    </nav>
    <nav class="main">
      <ul>
        <li class="search">
          <a class="fa-search" href="#search">Search</a>
          <form id="search" method="get" action="#">
            <input type="text" name="query" placeholder="Search" />
          </form>
        </li>
        <li class="menu">
          <a class="fa-bars" href="#menu">Menu</a>
        </li>
      </ul>
    </nav>
  </header>

<!-- Menu -->
  <section id="menu">

    <!-- Search -->
      <section>
        <form class="search" method="get" action="#">
          <input type="text" name="query" placeholder="Search" />
        </form>
      </section>

    <!-- Links -->
      <section>
        <ul class="links">
          <li>
            <a href="posts/index">
              <h3>NewsFeed</h3>
            </a>
          </li>
          <li>
            <a href="#">
              <h3>Messenger</h3>
            </a>
          </li>
        </ul>
      </section>

    <!-- Actions -->
      <section>
        <ul class="actions vertical">
          <li><a href="posts/new" class="button big fit">New Post</a></li>

        </ul>
      </section>

  </section>
