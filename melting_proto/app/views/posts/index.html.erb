<p id="notice"><%= notice %></p>
<div class="user_function">
  <%= render "posts/user_function" %>
</div>
<br />
<div class="my_info">
  <h3>my info</h3>
  <p>email : <%= current_user.email%> | posts count: <%= current_user.posts.size %></p>
  <p>follower: <%= current_user.followers.length %> | following: <%= current_user.followings.length %></p>
</div>
<hr />
<h1>Posts</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Like</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.email %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.likes.size %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
