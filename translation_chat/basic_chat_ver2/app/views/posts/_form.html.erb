<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%#= f.association :user %>
    <%= f.input :title %>
    <%= f.input :content, input_html: { rows: 10 } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to "Show", @post if @post.persisted? %>
    <%= link_to 'Back', root_path%>
  </div>
<% end %>
